<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@color/background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Вітаємо у веб калькуляторі!"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="12dp"/>

        <TextView
                android:text="Цей калькулятор здатен: розраховувати струму трифазного КЗ, струму однофазного КЗ, та перевіряти на термічну та динамічну стійкість у складі."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/taskDescription"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введіть дані:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/surface"
                android:padding="16dp"
                android:elevation="2dp"
                android:clipToPadding="false"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp">

            <EditText
                    android:id="@+id/input_ik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Iᵏ, A"
                    android:inputType="numberDecimal"/>

            <Spinner
                    android:id="@+id/spinner_cabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>

            <EditText
                    android:id="@+id/input_tf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="tᶠ, с"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="8dp"/>

            <EditText
                    android:id="@+id/input_sm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sᴹ, кВ*А"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="8dp"/>

            <EditText
                    android:id="@+id/input_tm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tᴹ, год"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="8dp"/>

            <EditText
                    android:id="@+id/input_sk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sᵏ, МВ*А"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="8dp"/>

            <Button
                    android:id="@+id/btn_calc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Розрахувати!"
                    android:layout_marginTop="12dp"/>

        </LinearLayout>

        <TextView
                android:id="@+id/results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:visibility="gone"
                android:padding="8dp"
                android:background="@color/surface"/>

    </LinearLayout>

</ScrollView>