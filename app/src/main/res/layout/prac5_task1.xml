<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:background="@color/background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calcTask1"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="12dp"/>

        <TextView
                android:text="Цей калькулятор здатен: порівнювати надійності одноколової та двоколової систем електропередачі та розраховувати збитки від перерв електропостачання у разі застосування однотрансформаторної ГТП."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="left"
                android:paddingBottom="16dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Введіть дані:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Для одноколової системи:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/surface"
                android:padding="16dp"
                android:elevation="2dp"
                android:clipToPadding="false"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="6dp">

            <!-- Контейнер для динамічних елементів ЕПС -->
            <LinearLayout
                    android:id="@+id/dynamic_inputs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            <!-- Кнопка додавання елемента -->
            <Button
                    android:id="@+id/btn_add_element"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="➕ Додати елемент"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Двоколова система складається з двох ідентичних одноколових і секційного вимикача 10 кВ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="12dp"/>

            <!-- Поля введення -->
            <EditText
                    android:id="@+id/input_zpera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Зпер.а, грн./кВт⋅год"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="8dp"/>

            <EditText
                    android:id="@+id/input_zperp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Зпер.п, грн./кВт⋅год"
                    android:inputType="numberDecimal"
                    android:layout_marginTop="8dp"/>

            <Button
                    android:id="@+id/btn_calc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Розрахувати!"
                    android:enabled="false"
                    android:layout_marginTop="16dp"/>

        </LinearLayout>

        <TextView
                android:id="@+id/results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:visibility="gone"
                android:padding="16dp"
                android:background="@color/surface"
        />

    </LinearLayout>

</ScrollView>